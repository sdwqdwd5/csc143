package calculator;
import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class test {
    public static String text = "";
    public static double sum  =  0;
    public static JLabel userText = new JLabel();
    public static String typeSymbol = "";
    public static boolean symbol = false;
    public static double previous = 0;
    public static double previousSum = 0;
    public static String previousSymbol = "";
    private static void placeComponents(JPanel panel) {
       
    	panel.setLayout(null);
        userText.setBounds(25,25,475,150);
        panel.add(userText);
        userText.setBorder(BorderFactory.createMatteBorder(3,3,3,3,Color.cyan));
        userText.setText(text + sum);
        JButton one    	   = new JButton("1");
        one.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 1;
	        		}else if (symbol == true) {
	        			previous = previous + 1;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10 + 1;
        			symbol = false;
        		}
        		text = text + "1";
        		userText.setText(text);
        	}
        });
        JButton two        = new JButton("2");
        two.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 2;
	        		}else if (symbol == true) {
	        			previous = previous*10 + 2;
	        			symbol = false;
	        		}
        		}
        		else {
    			previous = previous + 2;
    			symbol = false;
    		}
        		text = text + "2";
        		userText.setText(text);
        	}
        });
        JButton three      = new JButton("3");
        three.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 3;
	        		}else if (symbol == true) {
	        			previous = previous + 3;
	        			symbol = false;
	        		}
        		}else{
        			previous = previous*10 + 3;
        			symbol = false;
        		}
        		text = text + "3";
        		userText.setText(text);
        	}
        });
        JButton four       = new JButton("4");
        four.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
        		if(previous != 0 && symbol == false) {
        			previous = previous * 10 + 4;
        		}else if (symbol == true) {
        			previous = previous + 4;
        			symbol = false;
        		}
        		}else {
            		previous = previous*10 + 4;
            		symbol = false;
        		}
        		text = text + "4";
        		userText.setText(text);
        	}
        });
        JButton five       = new JButton("5");
        five.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 5;
	        		}else if (symbol == true) {
	        			previous = previous + 5;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10 + 5;
        			symbol = false;
        		}
        		text = text + "5";
        		userText.setText(text);
        	}
        });
        JButton six        = new JButton("6");
        six.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 6;
	        		}else if (symbol == true) {
	        			previous = previous + 6;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10 + 6;
        			symbol = false;

        		}
        		text = text + "6";
        		userText.setText(text);
        	}
        });
        JButton seven      = new JButton("7");
        seven.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 7;
	        		}else if (symbol == true) {
	        			previous = previous + 7;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10+ 7;
        			symbol = false;
        		}
        		text = text + "7";
        		userText.setText(text);
        	}
        });
        JButton eight      = new JButton("8");
        eight.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 8;
	        		}else if (symbol == true) {
	        			previous = previous + 8;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10 + 8;	
        			symbol = false;
        		}
        		text = text + "8";
        		userText.setText(text);
        	}
        });
        JButton nine       = new JButton("9");
        nine.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum != 0) {
	        		if(previous != 0 && symbol == false) {
	        			previous = previous * 10 + 9;
	        		}else if (symbol == true) {
	        			previous = previous + 9;
	        			symbol = false;
	        		}
        		}else {
        			previous = previous*10 + 9;
        			symbol = false;
        		}
        		text = text + "9";
        		userText.setText(text);
        	}
        });
        JButton zero       = new JButton("0");
        zero.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if(previous != 0 && symbol == false) {
        			previous = previous * 10;
        		}else if (symbol == true) {
        			symbol = false;
        	}
        		text = text + "0";
        		userText.setText(text);
        	}
        });
        JButton divide 	   = new JButton("÷");
        divide.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum !=0 && previous != 0 && symbol == false) {
        			if (typeSymbol.equals("÷")) {
        				sum = sum / previous;
        			}else if (typeSymbol.equals("-")) {
        				previousSymbol = "-";
        				previousSum = sum;
        				sum = previous;
        			}else if (typeSymbol.equals("+")) {
        				previousSymbol = "+";
        				previousSum = sum;
        				sum = previous;
        			}else if (typeSymbol.equals("×")) {
        				sum = sum * previous;
        			}
        			text = text + "÷";
        			symbol = true;
        			typeSymbol = "÷";
            		userText.setText(text);
            		previous = 0;
        		}else if (sum == 0 && previous != 0 && symbol == false) {
        			if (typeSymbol.equals("-")) {
         				previousSymbol = "-";
         				previousSum = sum;
         				sum = 0;
         			}else if (typeSymbol.equals("+")) {
         				previousSymbol = "+";
         				previousSum = sum;
         				sum = 0;
         			}else {
         				sum = previous;
         			}
        			previous = 0;
        			text = text + "÷";
        			typeSymbol = "÷";
        			symbol = true;
            		userText.setText(text);
        		}
        	}
        });
        JButton multiple   = new JButton("×");
        multiple.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum !=0 && previous != 0 && symbol == false) {
        			if (typeSymbol.equals("÷")) {
        				sum = sum / previous;
        			}else if (typeSymbol.equals("-")) {
        				previousSymbol = "-";
        				previousSum = sum;
        				sum = previous;
        			}else if (typeSymbol.equals("+")) {
        				previousSymbol = "+";
        				previousSum = sum;
        				sum = previous;
        			}else if (typeSymbol.equals("×")) {
        				sum = sum * previous;
        			}
        			previous = 0;
        			text = text + "×";
        			symbol = true;
        			typeSymbol = "×";
            		userText.setText(text);
        		}else if (sum == 0 && previous != 0 && symbol == false) {
        			if (typeSymbol.equals("-")) {
         				previousSymbol = "-";
         				previousSum = sum;
         				sum = 0;
         			}else if (typeSymbol.equals("+")) {
         				previousSymbol = "+";
         				previousSum = sum;
         				sum = 0;
         			}else {
         				sum = previous;
         			}
        			previous = 0;
        			text = text + "×";
        			symbol = true;
        			typeSymbol = "×";
            		userText.setText(text);
        		}
        	}
        });
        JButton minus      = new JButton("-");
        minus.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum !=0 && previous != 0&& symbol == false) {
        			if (typeSymbol.equals("÷")) {
        				sum = sum / previous;
        			}else if (typeSymbol.equals("-")) {
        				sum = sum - previous;
        			}else if (typeSymbol.equals("+")) {
        				sum = sum + previous;
        			}else if (typeSymbol.equals("×")) {
        				sum = sum * previous;
        			}
        			if(previousSymbol.equals("-")) {
        				sum = previousSum - sum;
        			}else if (previousSymbol.equals("+")) {
        				sum = sum + previousSum;
        			}
        			previousSum = 0;
        			previousSymbol = "";
        			text = text + "-";
        			symbol = true;
        			typeSymbol = "-";
        			previous = 0;
            		userText.setText(text);
        		}else if (sum == 0 && previous != 0) {
        			sum = previous;
        			text = text + "-";
        			previous = 0;
        			symbol = true;
        			typeSymbol = "-";
            		userText.setText(text);
        		}
        	}
        });
        JButton plus 	   = new JButton("+");
        plus.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (sum !=0 && previous != 0&& symbol == false) {
        			if (typeSymbol.equals("÷")) {
        				sum = sum / previous;
        			}else if (typeSymbol.equals("-")) {
        				sum = sum - previous;
        			}else if (typeSymbol.equals("+")) {
        				sum = sum + previous;
        			}else if (typeSymbol.equals("×")) {
        				sum = sum * previous;
        			}
        			if(previousSymbol.equals("-")) {
        				sum = previousSum - sum;
        			}else if (previousSymbol.equals("+")) {
        				sum = sum + previousSum;
        			}
        			previousSum = 0;
        			previousSymbol = "";
        			text = text + "+";
        			symbol = true;
        			previous = 0;
        			typeSymbol = "+";
            		userText.setText(text);
        		}else if (sum == 0 && previous != 0&& symbol == false) {
        			sum = previous;
        			text = text + "+";
        			previous = 0;
        			symbol = true;
        			typeSymbol = "+";
            		userText.setText(text);
        		}
        	}
        });
        JButton equal      = new JButton("=");
        equal.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		if (symbol == false) {
        			if (typeSymbol.equals("÷")) {
        				sum = (sum / previous) ;
        			}else if (typeSymbol.equals("-")) {
        				sum = sum - previous;
        			}else if (typeSymbol.equals("+")) {
        				sum = sum + previous;
        			}else if (typeSymbol.equals("×")) {
        				sum = sum * previous;
        			}
        			if (previousSymbol.equals("+")) {
        				sum =  previousSum + sum;
        			}else if(previousSymbol.equals("-")) {
        				sum = previousSum - sum;
        			}
        		}
        		previous = 0;
        		text = text + "=" + sum;
        		previousSum = 0;
        		typeSymbol = "";
        		previousSymbol = "";
        		symbol = false;
        		userText.setText(text);
        	}
        });
        JButton percentage = new JButton("%");
        percentage.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		sum = sum + 1;
        		text = text + "%";
        		userText.setText(text);
        	}
        });
        JButton changesign = new JButton("+/-");
        changesign.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		sum = sum + 1;
        		text = text + "1";
        		userText.setText(text);
        	}
        });
        JButton clear      = new JButton("C");
        clear.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		sum = 0;
        		text = "";
        		userText.setText(text);
        	}
        });
        JButton decimal    = new JButton(".");
        decimal.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent event) {
        		sum = sum + 1;
        		text = text + ".";
        		userText.setText(text);
        	}
        });
       
        
        panel.add(button(one,25,575));
        panel.add(button(two,150,575));
        panel.add(button(three,275,575));
        panel.add(button(four,25,450));
        panel.add(button(five,150,450));
        panel.add(button(six,275,450));
        panel.add(button(seven,25,325));
        panel.add(button(eight,150,325));
        panel.add(button(nine,275,325));
        panel.add(button(divide,400,200));
        panel.add(button(multiple,400,325));
        panel.add(button(minus,400,450));
        panel.add(button(plus,400,575));
        panel.add(button(equal,25,575));
        panel.add(button(percentage,275,200));
        panel.add(button(changesign,150,200));
        panel.add(button(clear,25,200));
        panel.add(button(equal,400,700));
        panel.add(button(decimal,275,700));
        zero.setBounds(25,700,225,100);
        panel.add(zero);
        userText.setText(text);
    }
    public static JButton button(JButton button, int x, int y) {
    	button.setBounds(x,y,100,100);
    	return button;
    }
    
    public static void main(String[] args) {
        JFrame frame = new JFrame("Calculator");
        frame.setSize(525, 825);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        JPanel panel = new JPanel();    
        frame.add(panel);
        placeComponents(panel);
        frame.setVisible(true);
    }

}